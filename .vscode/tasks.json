{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-Iinclude",
                "src/DiskDriver.cpp",
                "src/FileSystem.cpp",
                "src/Kernel.cpp",
                "src/Shell.cpp",
                "src/Tools.cpp",
                "-o",
                "my_VFS"

            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}